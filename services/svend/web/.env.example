# Svend Environment Configuration
# Copy to .env and fill in values

# =============================================================================
# Core Settings
# =============================================================================

# Environment: dev, staging, prod
SVEND_ENV=dev
SVEND_DEBUG=true
SVEND_SECRET_KEY=change-me-in-production-use-strong-random-key

# Database (SQLite for dev, PostgreSQL for prod)
SVEND_DATABASE_URL=sqlite:///./db.sqlite3
# SVEND_DATABASE_URL=postgresql://user:pass@localhost:5432/svend

# API
SVEND_ALLOWED_HOSTS=localhost,127.0.0.1,svend.io
SVEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SVEND_RATE_LIMIT_PER_MINUTE=20

# =============================================================================
# Stripe Billing (REQUIRED for payments)
# =============================================================================

# Get these from https://dashboard.stripe.com/apikeys
SVEND_STRIPE_SECRET_KEY=sk_test_...
SVEND_STRIPE_WEBHOOK_SECRET=whsec_...

# Create a Product with recurring price at https://dashboard.stripe.com/products
# Pro tier: $5/month
SVEND_STRIPE_PRICE_ID_PRO=price_...

# =============================================================================
# Alpha Access
# =============================================================================

# Set to false for open registration
SVEND_REQUIRE_INVITE=true

# =============================================================================
# Model Pipeline
# =============================================================================

# Kjerne pipeline path
SVEND_KJERNE_PATH=/home/eric/kjerne
SVEND_DEVICE=cuda

# Use Synara reasoning engine (true) or MoE (false)
SVEND_USE_SYNARA=true

# Open source LM fallback
SVEND_USE_OPEN_SOURCE_LM=false
SVEND_OPEN_SOURCE_LM_MODEL=Qwen/Qwen2.5-0.5B-Instruct

# Coder pipeline for computation
SVEND_ENABLE_CODER=true
SVEND_CODER_MODEL=Qwen/Qwen2.5-Coder-14B-Instruct

# =============================================================================
# Opus Escalation (Flywheel)
# =============================================================================

# Anthropic API key for Opus fallback on low-confidence responses
SVEND_ANTHROPIC_API_KEY=sk-ant-...

# Confidence thresholds (0-1)
SVEND_FLYWHEEL_CONFIDENCE_THRESHOLD=0.7
SVEND_FLYWHEEL_AUTO_ESCALATE_THRESHOLD=0.4
